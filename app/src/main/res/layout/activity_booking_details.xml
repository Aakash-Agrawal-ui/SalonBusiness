<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewModel.BookingDetails">
    <include
        android:id="@+id/bookingDetailsToolbar"
        layout="@layout/new_bar_design_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:padding="3dp"
        android:id="@+id/bookingDetailsRecyclerView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:background="@color/colorGrayLight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUnderLine"
            android:fontFamily="@font/nexaregular"
            android:text="Offer Discount"/>
        <TextView
            android:id="@+id/bookingDetailsOfferDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="offer discount value"
            android:fontFamily="@font/nexaregular"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginRight="11dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorUnderLine"
                android:fontFamily="@font/nexaregular"
                android:text="Hygiene Charges"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hygiene value"
                android:id="@+id/bookingDetailsHygieneValue"
                android:fontFamily="@font/nexaregular"
                android:textStyle="bold"
                android:textColor="@color/colorUnderLine"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginRight="11dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:layout_marginTop="10dp"
        android:padding="11dp"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nexaregular"
            android:text="TOTAL" />
        <TextView
           android:layout_width="match_parent"
            android:layout_marginEnd="11dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_gravity="end"
            android:id="@+id/bookingDetailsAmount"
            android:gravity="end"
            android:textStyle="bold"
            android:fontFamily="@font/nexaregular"
            android:text="Amount" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/acceptBookingLayout"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:fontFamily="@font/nexaregular"
        android:textStyle="bold"
        android:textSize="13.3sp"
        android:id="@+id/bookingAcceptButton"
        android:text="Accept"
        android:textAllCaps="false"
        android:background="@drawable/new_button_red"
        android:textColor="@color/colorWhite"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:fontFamily="@font/nexaregular"
            android:textStyle="bold"
            android:textSize="13.3sp"
            android:layout_marginTop="10dp"
            android:id="@+id/bookingDeclineButton"
            android:text="Decline"
            android:textAllCaps="false"
            android:background="@drawable/new_button_red"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


</LinearLayout>