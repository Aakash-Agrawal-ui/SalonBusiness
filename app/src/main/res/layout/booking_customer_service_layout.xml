<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service name"
        android:id="@+id/bookingDetailsCustomerServiceName"
        android:textColor="@color/colorUnderLine"
        android:fontFamily="@font/nexaregular"
        android:textSize="14.2sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginEnd="11dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Service price"
        android:id="@+id/bookingDetailsCustomerServicePrice"
        android:textColor="@color/colorUnderLine"
        android:fontFamily="@font/nexaregular"
        android:textSize="14.2sp"
        />

</LinearLayout>