<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/serviceNameDet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textStyle="bold"
                android:paddingLeft="3dp"
                android:fontFamily="@font/nexalight"
                android:textColor="@color/colorUnderLine"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="10dp"
                android:textSize="16.7sp"/>


            <TextView
                android:id="@+id/serviceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:padding="3dp"
                android:fontFamily="@font/nexalight"
                android:layout_below="@id/serviceNameDet"
                android:text="Service Time"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorUnderLine"
                android:textSize="13.7sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/servicePriceDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/nexalight"
                android:layout_toRightOf="@id/serviceDuration"
                android:layout_alignBaseline="@id/serviceDuration"
                android:text="Price"
                android:layout_below="@id/serviceNameDet"
                android:textColor="@color/colorUnderLine"
                android:textStyle="bold"
                android:textSize="13.7sp" />
            <TextView
                android:id="@+id/serviceDiscountDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:layout_alignBottom="@id/servicePriceDet"
                android:layout_marginLeft="11dp"
                android:layout_below="@id/serviceNameDet"
                android:layout_toRightOf="@id/servicePriceDet"
                android:layout_alignBaseline="@id/serviceDuration"
                android:text="Discount"
                android:textColor="@color/colorUnderLine"
                android:textSize="13.7sp"
                android:textStyle="bold"/>



            <TableRow
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:layout_alignBottom="@id/serviceDuration"
                android:layout_marginEnd="20dp">

            <Button
                android:id="@+id/updateService"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:background="@android:drawable/ic_menu_edit" />
            <Switch
                android:id="@+id/serviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
            </TableRow>
            <TextView
                android:id="@+id/shortDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Description"
                android:layout_below="@id/serviceDuration"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:fontFamily="@font/nexalight"
                android:textSize="11.7sp"
                android:textColor="@color/colorUnderLine"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>