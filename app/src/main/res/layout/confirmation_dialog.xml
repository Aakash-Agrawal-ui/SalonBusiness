<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="23dp">
            <TextView
                android:id="@+id/textAlert"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are You Sure,You want to logout?"
                android:textColor="@color/colorUnderLine"
                android:textSize="15sp"
                android:fontFamily="@font/nexaregular"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/noButton"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="No"
                android:textAllCaps="false"
                android:fontFamily="@font/nexaregular"
                android:layout_below="@id/textAlert"
                android:textColor="@android:color/white"
                android:background="@color/colorRed"/>
            <Button
                android:id="@+id/yesButton"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/noButton"
                android:textAllCaps="false"
                android:text="Yes"
                android:fontFamily="@font/nexaregular"
                android:background="@color/colorRed"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>