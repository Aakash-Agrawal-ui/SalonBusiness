<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/barberNameDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.7sp"
                android:text="Barber"
                android:padding="4dp"
                android:fontFamily="@font/nexalight"
                android:textColor="@color/colorUnderLine"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/barberGenderDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorUnderLine"
                android:text="Gender"
                android:visibility="gone"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/barberNameDet"
                android:layout_alignBottom="@id/barberNameDet"/>
            <TableRow
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignBottom="@id/barberNameDet">

                <Button
                    android:id="@+id/updateServiceBarberButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:drawable/ic_menu_edit" />
                <Switch
                    android:id="@+id/serviceBarberStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </TableRow>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>